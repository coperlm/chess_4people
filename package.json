{
  "name": "four-player-chess",
  "version": "1.0.0",
  "description": "四人象棋游戏",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000",
    "build-css": "tailwindcss -i ./css/input.css -o ./css/output.css --watch",
    "start": "electron .",
    "serve": "node server.js",
    "build:win": "electron-builder --win --x64",
    "build:win:dir": "electron-builder --win --x64 --dir",
    "build:win:portable": "electron-builder --win portable --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.17"
  },
  "keywords": [
    "chess",
    "game",
    "four-player",
    "javascript"
  ],
  "author": "Chess Game Developer",
  "license": "MIT",
  "build": {
    "appId": "com.chess.fourplayer",
    "productName": "四人象棋",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!*.md",
      "!package-standalone.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}